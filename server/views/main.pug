extends layout

block content

  header.no-select
    div.title
    div.members
      div.user-info-name#name Members:
      div.user-info
        div.user-info-avatar(title="avatar")#avatar
    span.openNav &#x2630;

  section.todo#main
    div.columnList
    div.addColumn + Add Column
    div.column_modal.modal.hidden
      div.modal_overlay
      div.modal_content
    div.note_modal.modal.hidden
      div.modal_overlay
      div.modal_content

  aside#mySidenav.sidenav
    div.navHeader.no-select
      div &#x2630 Menu
      div.closebtn &times
    div.signupbtn.menubtn
      i.fas.fa-user-plus
      span(title="Invite to board") Add Member
    div.logoutbtn.menubtn
      i.fas.fa-sign-out-alt
      span  Log out
    div.loglist
      div.navHeader.no-select
        div
          i.fas.fa-bell
          span  Activity

  footer.footer
